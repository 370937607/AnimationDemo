<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SafCountActivyty"
    android:orientation="vertical"
    android:background="@mipmap/beijing17">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/texxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/btg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="旧密码："/>
            <EditText
                android:id="@+id/up_usernameg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="新密码："/>
            <EditText
                android:id="@+id/up_passwordg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:password="true"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="确认新密码："/>
            <EditText
                android:id="@+id/up_password2g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/updateg"
            android:background="@drawable/btg_1"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="修改密码"/>
        <Button
            android:id="@+id/up_returng"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btg_1"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="返回"/>

    </LinearLayout>

</LinearLayout>