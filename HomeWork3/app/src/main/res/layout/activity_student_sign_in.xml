<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/onee"
    tools:context=".ui.StudentSignInActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="学生注册"
            android:textSize="30dp"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="用户名："/>
            <EditText
                android:id="@+id/st_username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="密码 ："/>
            <EditText
                android:id="@+id/st_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:password="true"
                />
        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:text="确认密码："/>
            <EditText
                android:id="@+id/st_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再输入密码"
                android:password="true"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="姓名："/>
            <EditText
                android:id="@+id/studentname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="姓名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/studentsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/btn_male"
                    android:text="男"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:id="@+id/btn_female"
                    android:text="女"
                    />

            </RadioGroup>
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="年龄："/>
            <EditText
                android:id="@+id/studentage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="年龄"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="学号："/>
            <EditText
                android:id="@+id/studentnumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="学号"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="班级："/>
            <EditText
                android:id="@+id/studentclass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="班级"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="学院："/>
            <EditText
                android:id="@+id/studentinstitute"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="学院"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="专业："/>
            <EditText
                android:id="@+id/studentmajor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="专业"
                />
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="宿舍号："/>
            <EditText
                android:id="@+id/studentroom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="宿舍号"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/st_signin"
            android:background="@drawable/btg_1"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="注册"/>
        <Button
            android:layout_marginLeft="50dp"
            android:id="@+id/st_return"
            android:background="@drawable/btg_1"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="返回"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_st_success"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

</LinearLayout>